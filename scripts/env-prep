#!/bin/bash

if [ -n "${SDEBUG:-}" ] ; then
  set -x
fi

if [ -f ".logging-ns" ] ; then
  LOGGING_NS=$(cat .logging-ns)
fi

export LOGGING_NS=${LOGGING_NS:-openshift-logging}
if [ -z "${pod:-}" ] ; then
  pod=$(oc -n $LOGGING_NS get pods -l component=elasticsearch -o jsonpath={.items[0].metadata.name})
fi
